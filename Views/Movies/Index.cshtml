@model IList<Vidly.Models.Movies.Movie>;
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary btn-large" })

<h3></h3>
@if(!Model.Any())
{
    <p>We dont have any movie yet.</p>
} else {
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Movie</th>
          <th>Genre</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var movie in Model)
        {
         <tr>
           @*<td>@Html.ActionLink(movie.Name, "Details", new { id=movie.Id })</td>*@
           <td>@Html.ActionLink(movie.Name, "Edit", new { id=movie.Id })</td>
           <td>@movie.Genre.Name</td>
         </tr>
         
        }
      </tbody>
    </table>
   
  }